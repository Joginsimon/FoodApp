<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        xmlns:android="http://schemas.android.com/apk/res/android">


        <LinearLayout android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <View
                android:background="#FFA500"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <TextView
                android:textSize="30dp"
                android:layout_marginLeft="10dp"
                android:textColor="#FFA500"
                android:textStyle="bold"
                android:text="Food Delivery"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>


        </LinearLayout>
        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:text="Search for dishes or restaurant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_marginLeft="10dp"
            android:text="Featured Dishes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <HorizontalScrollView android:layout_width="match_parent"
            android:layout_height="100dp"
            >

            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/dosaimagehello"/>

                <ImageView
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/shawarmahello"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <ImageView
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/br_hello"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <ImageView
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/dosaimagehello"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <ImageView
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/br_hello"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <ImageView
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/vegsandeichhello"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>


            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_margin="20dp" android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatButton
                android:background="#FFA500"
                android:layout_marginLeft="30dp"
                android:text="Pizza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatButton
                android:background="#FFA500"
                android:layout_marginLeft="30dp"
                android:text="Burger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatButton
                android:background="#FFA500"
                android:layout_marginLeft="30dp"
                android:text="Salad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <TextView
            android:layout_margin="10dp"
            android:text="Popular Dishes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <ImageView
            android:layout_margin="20dp"
            android:src="@drawable/dosaimagehello"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_margin="20dp"
            android:src="@drawable/shawarmahello"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_margin="20dp"
            android:src="@drawable/beefcurryhe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_margin="20dp"
            android:src="@drawable/beefcurryhe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_margin="20dp"
            android:src="@drawable/secondburger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_margin="20dp"
            android:src="@drawable/br_hello"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>



</ScrollView>